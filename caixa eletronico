programa
{
	
	funcao inicio()
 {
		real saldo = 1000.00
		inteiro opcao
		real saque
    
		enquanto(verdadeiro) {
			escreva("===Caixa Eletrônico===\n")
			escreva("1 - Consultar Saldo\n")
			escreva("2 - Sacar\n")
			escreva("3 - Sair\n")
			escreva("Escolha Uma Opção: ")
			leia(opcao) 

      se(opcao == 1) {
				escreva("\nSeu saldo atual é: R$",saldo,"\n") }
      se(opcao == 3) {
				escreva("\nObrigado Por Utilizar Nossos Serviços\n") }
      se(opcao > 3) {
        escreva ("\nOpção Inválida - Por Favor Digite Novamente\n") }
      se(opcao <= 0) {
        escreva ("\nOpção Inválida - Por Favor Digite Novamente\n") }
			senao se(opcao == 2) {
				escreva("\nDigite o valor desejado: R$ ") 
				leia(saque) 
      se(opcao == 3) {
				escreva("\nObrigado Por Utilizar Nossos Serviços\n") }
			se(saque > saldo) {
				escreva("\nSaldo Insuficiente\n") }
			senao se(saque <=0) {
				escreva("\nValor Inválido - Digite um Valor Maior que 0\n") }
			senao{
				saldo = saldo - saque
				escreva("\nSaque Realizado Com Sucesso\n")
				escreva("\nNovo Saldo: R$", saldo, "\n")
			}
	
}			
			
}	
				
}
			
}
